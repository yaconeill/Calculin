@model CambioMonedaWeb.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<div class="jumbotron">
    <h2 class="text-center">@ViewData["Title"]</h2>
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                <h4 class="text-center">Create a new account.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Email" class="form-control" required/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Password" type="password" class="form-control" required pattern=".{6,}"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" required pattern=".{6,}" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="FechaNacimiento" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="FechaNacimiento" type="date" class="form-control" required />
                        <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="IdPais" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <select asp-for="IdPais" asp-items="@(new SelectList(@Model.Paises, "Id", "Nombre"))" class="form-control" required>
                            <option value="">Seleccionar país</option>
                        </select>
                        <span asp-validation-for="IdPais" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-success">Register</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>