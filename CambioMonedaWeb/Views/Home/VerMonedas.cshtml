@model CambioMonedaWeb.HomeViewModel

<div class="jumbotron">
    <h3 class="text-center">Listado de monedas</h3>

    <div class="row">
        @foreach (var moneda in Model.ListaMonedas)
        {
            <div class="col-sm-4 col-lg-4 col-md-4 animated fadeIn">
                <a asp-controller="Home" asp-action="DetalleMoneda" asp-route-id="@moneda.Id"><div class="thumbnail">
                    <img src="~/images/currency.jpg" alt="">
                    <div class="caption">
                        <h4 class="pull-right"><span class="label label-info">@moneda.IdentificadorMoneda</span></h4>
                        @*<h4>
                            <a asp-controller="Home" asp-action="DetalleMoneda" asp-route-id="@moneda.Id">@moneda.Nombre</a>
                        </h4>*@
                        <p>@moneda.Nombre</p>
                    </div>
                </div></a>
            </div>

        }
    </div>
</div>
