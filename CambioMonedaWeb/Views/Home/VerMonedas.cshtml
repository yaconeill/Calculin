@model CambioMonedaWeb.HomeViewModel

<div class="jumbotron">
    <h3 class="text-center">Listado de monedas</h3>

    <div class="row">
        @foreach (var moneda in Model.ListaMonedas)
        {
            <div class="col-sm-4 col-lg-4 col-md-4 animated fadeIn">
                <div class="thumbnail">
                    <img src="@Model.ImagenMoneda" alt="">
                    <div class="caption">
                        <h3 class="pull-right"><span class="label label-info">@moneda.IdentificadorMoneda</span></h3>
                        <h3>
                            <a asp-controller="Home" asp-action="DetalleMoneda" asp-route-id="@moneda.Id">@moneda.IdentificadorMoneda</a>
                        </h3>
                        @*<p>@moneda.Nombre</p>*@
                    </div>
                </div>
            </div>

        }
    </div>
</div>
