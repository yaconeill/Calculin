@model ModeloCore.Moneda
<div class="jumbotron">
    <h2 class="text-center">@Model.Nombre</h2>
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3 animated fadeIn">
            <div class="thumbnail">
                <img src="~/images/currency.jpg" alt="">
                <div class="caption">
                    <h3 class="pull-right"><span class="label label-info">@Model.IdentificadorMoneda</span></h3>
                    <h3>
                        @Model.Nombre
                    </h3>
                    <p>@*@Model.Nombre*@</p>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-sm-offset-3 animated fadeIn">
            <h4 class="text-center">Editar moneda</h4>
            <hr />
            <form asp-action="DetalleMoneda" method="post" class="form-horizontal" role="form">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="IdentificadorMoneda" class="col-md-4 control-label"></label>
                    <div class="col-md-6">
                        <input asp-for="IdentificadorMoneda" class="form-control" />
                        <span asp-validation-for="IdentificadorMoneda" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Nombre" class="col-md-4 control-label"></label>
                    <div class="col-md-6">
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-5">
                        <input type="submit" class="btn btn-primary pull-right" value="Actualizar" />
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>